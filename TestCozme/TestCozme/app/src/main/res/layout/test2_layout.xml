<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/basari"
        android:textSize="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txt_Soru"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:text="BAŞARI : "
        android:textColor="@android:color/background_dark" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/basari"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="133dp"
        android:layout_marginLeft="133dp"
        android:layout_marginTop="-12dp">

        <TextView
            android:id="@+id/txt_soru_sayi2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/background_dark"
            android:textSize="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="/"
            android:textColor="@android:color/background_dark"
            android:textSize="36dp" />

        <TextView
            android:id="@+id/txt_dogru_sayisi2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="@android:color/background_dark"
            android:textSize="24dp" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="350dp"


        android:layout_alignParentBottom="true"

        android:layout_marginBottom="161dp">


        <TextView
            android:id="@+id/txt_Soru2"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="70dp"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="24dp" />


        <RadioGroup
            android:id="@+id/radio_Grp2"
            android:layout_width="200dp"
            android:layout_height="200dp"


            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="33dp"
            android:layout_marginLeft="33dp"
            android:layout_marginBottom="1dp">


            <RadioButton
                android:id="@+id/check_A2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:onClick="A_Click"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="24dp" />

            <RadioButton
                android:id="@+id/check_B2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:checked="false"
                android:onClick="B_Click"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="24dp" />

            <RadioButton
                android:id="@+id/check_C2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:checked="false"
                android:onClick="C_Click"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="24dp" />

            <RadioButton
                android:id="@+id/check_D2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:checked="false"
                android:onClick="D_Click"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="24dp" />


        </RadioGroup>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="160dp"


            android:layout_alignParentEnd="true"

            android:layout_marginTop="150dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_A2"
                android:layout_width="50dp"
                android:layout_height="35dp" />

            <ImageView
                android:id="@+id/img_B2"
                android:layout_width="50dp"
                android:layout_height="40dp" />

            <ImageView
                android:id="@+id/img_C2"
                android:layout_width="50dp"
                android:layout_height="40dp" />

            <ImageView
                android:id="@+id/img_D2"
                android:layout_width="50dp"
                android:layout_height="40dp" />

        </LinearLayout>


    </RelativeLayout>


    <Button
        android:id="@+id/btn_yeni2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="28dp"
        android:text="GEÇ" />

    <Button
        android:id="@+id/btn_Sonuc2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="34dp"
        android:layout_marginRight="34dp"
        android:layout_marginBottom="22dp"
        android:text="Sonuç" />



</RelativeLayout>