<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/basari"
        android:textSize="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txt_Soru"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:text="BAŞARI : "
        android:textColor="@android:color/background_dark" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/basari"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="133dp"
        android:layout_marginLeft="133dp"
        android:layout_marginTop="-12dp">

        <TextView
            android:id="@+id/txt_soru_sayi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/background_dark"
            android:textSize="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="/"
            android:textColor="@android:color/background_dark"
            android:textSize="36dp" />

        <TextView
            android:id="@+id/txt_dogru_sayisi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="@android:color/background_dark"
            android:textSize="24dp" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="350dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="161dp">


        <TextView
            android:id="@+id/txt_Soru"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="70dp"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/txt_A"
            android:layout_width="39dp"
            android:layout_height="wrap_content"


            android:layout_alignStart="@+id/txt_Soru"
            android:layout_alignTop="@+id/txt_Soru"

            android:layout_marginTop="74dp"
            android:text="A."
            android:textColor="@android:color/black"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/txt_B"
            android:layout_width="39dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/txt_Soru"
            android:layout_alignTop="@+id/txt_Soru"
            android:layout_marginStart="0dp"
            android:layout_marginTop="115dp"
            android:text="B."
            android:textColor="@android:color/black"
            android:textSize="24dp" />


        <TextView
            android:id="@+id/txt_C"
            android:layout_width="39dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/txt_Soru"
            android:layout_alignTop="@+id/txt_Soru"
            android:layout_marginStart="0dp"
            android:layout_marginTop="154dp"
            android:text="C."
            android:textColor="@android:color/black"
            android:textSize="24dp" />


        <TextView
            android:id="@+id/txt_D"
            android:layout_width="39dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/txt_Soru"
            android:layout_alignTop="@+id/txt_Soru"
            android:layout_marginStart="0dp"
            android:layout_marginTop="193dp"
            android:text="D."
            android:textColor="@android:color/black"
            android:textSize="24dp" />

        <RadioGroup
            android:id="@+id/radio_Grp"
            android:layout_width="200dp"
            android:layout_height="200dp"


            android:layout_below="@+id/txt_Soru"
            android:layout_marginLeft="63dp"
            android:layout_marginTop="45dp">


            <RadioButton
                android:id="@+id/check_A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:onClick="A_Click"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="24dp" />

            <RadioButton
                android:id="@+id/check_B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:checked="false"
                android:onClick="B_Click"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="24dp" />

            <RadioButton
                android:id="@+id/check_C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:checked="false"
                android:onClick="C_Click"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="24dp" />

            <RadioButton
                android:id="@+id/check_D"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:checked="false"
                android:onClick="D_Click"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="24dp" />


        </RadioGroup>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="160dp"
            android:layout_alignTop="@+id/txt_A"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="0dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_A"
                android:layout_width="50dp"
                android:layout_height="35dp" />

            <ImageView
                android:id="@+id/img_B"
                android:layout_width="50dp"
                android:layout_height="40dp" />

            <ImageView
                android:id="@+id/img_C"
                android:layout_width="50dp"
                android:layout_height="40dp" />

            <ImageView
                android:id="@+id/img_D"
                android:layout_width="50dp"
                android:layout_height="40dp" />

        </LinearLayout>


    </RelativeLayout>


    <Button
        android:id="@+id/btn_yeni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignStart="@+id/txt_Soru"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="28dp"
        android:text="GEÇ" />

    <Button
        android:id="@+id/btn_Sonuc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn_yeni"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="274dp"
        android:layout_marginLeft="274dp"
        android:layout_marginTop="1dp"
        android:text="Sonuç" />



</RelativeLayout>